<div class="dash_block2" id="dashboard_2">
    <div class="graf_1 shadow">
        <div class="graf_titel">
            <div class="graf_titel_text">График 1</div>
        </div>
        <div class="container-fluid">
            <div class="row">

                <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">

                    <canvas class="my-4 w-100" id="myChart" width="900" height="380"></canvas>

                </main>
            </div>
        </div>

    </div>
    <div class="graf_2 shadow">
        <div class="graf_titel">
            <div class="graf_titel_text">Статистика по задачам</div>
