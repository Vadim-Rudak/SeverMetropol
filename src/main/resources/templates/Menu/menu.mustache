<div class="list_news" id="id_list_news">
    <div class="list_news_block_titel">
        <div class="news_titel">Лента новостей</div>
        <div>
            {{#visible_btn_add_news}}
                <a href="javascript:PopUpShowAddNews()" style="text-decoration: none">
                    <div class="btn_add_news">
                        <div class="text_btn_add_news">Добавить новость</div>
                    </div>
                </a>
            {{/visible_btn_add_news}}
        </div>
    </div>
    <div class="list_all_news" id="id_list_all_news">
        {{#news}}
            <div class="block_one_new shadow">
                <div class="block_img_in_new">
                    <picture style="text-align:center;object-fit: cover">
                        {{#newsImg.res}}
                            <img class="main_image" src="data:image/jpg;base64,{{newsImg.res}}" width="270px" height="200px" style="object-fit: cover" >
                        {{/newsImg.res}}
                        {{^newsImg.res}}
                            <img class="main_image" src="images/default_img_add_news.jpg" width="270px" height="200px" style="object-fit: cover" >
                        {{/newsImg.res}}
                    </picture>
                </div>
                <div class="block_info_in_new">
                    <div class="titel_in_new">{{#titel}}{{titel}}{{/titel}}</div>
                    <div class="info_one_new">{{#more_info}}{{more_info}}{{/more_info}}</div>
                    {{#href}}<div class="info_one_new">Ссылка на ресурс:<a href="{{href}}" >{{href}}</a></div>{{/href}}
                    <div class="other_info_new">Дата публикации: {{#date_created}}{{date_created}}{{/date_created}} {{#time_created}}{{time_created}}{{/time_created}} Автор: {{user_created.last_name}} {{#user_created.name}}{{user_created.name}}{{/user_created.name}}</div>
                </div>
            </div>
        {{/news}}
    </div>

</div>

<div class="b-popup" id="popUpAddNews">
    <div class="b-popup-content">
        <form method="post" enctype="multipart/form-data" action="/addNews" >
            <div class="titel_block">
                <div class="text_titel_hist">Добавление новости</div>
                <div class="block_cl">
                    <a href="javascript:PopUpHideAddNews()" style="text-decoration: none"><img src="images/ic_cl_btn.svg" width="20px" height="20px" /></a>
                </div>
            </div>
            <div class="inputs_info_in_new">
                <input name="id_user_created" value="{{AuthUser.id}}" hidden>
                <div class="block_img_and_titel" >
                    <div class="block_photo">
                        <a href="javascript:clearPhoto()" style="display: none; margin-top: 3px; margin-right: 3px; width: 15px;height: 15px;position: absolute;top: 0;right: 0" id="btn_clear_photo">
                            <img src="images/close.png" width="15px" height="15px"/>
                        </a>
                        <label for="custom-file-upload" class="append">
                            <img src="images/default_img_add_news.jpg" width="220px" height="124px" id="img_news" style="object-fit: cover"/>
                            <input type="file" name="file_img" id="custom-file-upload"/>
                        </label>
                    </div>
                    <div class="block_inp_add_news">
                        <div class="text_up_input">Заголовок новости</div>
                        <div class="input2">
                            <input class="input_fio" name="titel" placeholder="Введите заголовок">
                        </div>
                        <div class="text_up_input">Ссылка на новость</div>
                        <div class="input2">
                            <input class="input_fio" name="href" placeholder="Введите ссылку">
                        </div>
                    </div>
                </div>
                <div class="text_up_input">Подробная информация</div>
                <div class="input2">
                    <textarea class="input_messqge input_info3" name="more_info" placeholder="Введите подробную информацию"></textarea>
                </div>
                <div class="block_for_btn">
                    <button class="btn_save_news" type="submit">Добавить</button>
                </div>
            </div>


        </form>


    </div>
</div>



